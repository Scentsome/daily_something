<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:id="@+id/button6" android:layout_gravity="center_horizontal"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit"
                android:id="@+id/button8" android:layout_column="25"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:visibility="gone"/>
        <Switch android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/switch2"
                android:visibility="gone" android:layout_span="25"
                android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/button8"
                android:layout_alignBottom="@+id/button8"/>
        <Switch android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/switch3"
                android:visibility="gone" android:layout_span="25"
                android:layout_below="@+id/switch2" android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/button9" android:layout_alignBottom="@+id/button9"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit"
                android:id="@+id/button9" android:layout_column="25"
                android:layout_below="@+id/button8" android:layout_alignParentRight="true" android:visibility="gone"/>
        <Switch android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/switch4"
                android:visibility="gone" android:layout_span="25"
                android:layout_below="@+id/button9" android:layout_toLeftOf="@+id/button9"
                android:layout_alignBottom="@+id/button10"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit"
                android:id="@+id/button10" android:layout_column="25"
                android:layout_below="@+id/button9" android:layout_alignParentRight="true" android:visibility="gone"/>
        <Switch android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/switch5"
                android:visibility="gone" android:layout_span="25"
                android:layout_below="@+id/switch4"
                android:layout_toLeftOf="@+id/button10" android:layout_alignBottom="@+id/button11"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit"
                android:id="@+id/button11" android:layout_column="25"
                android:layout_below="@+id/switch4" android:layout_toRightOf="@+id/switch5" android:visibility="gone"/>
        <Switch android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/switch6"
                android:visibility="gone" android:layout_span="25"
                android:layout_alignTop="@+id/button12" android:layout_toLeftOf="@+id/button12"
                android:layout_alignBottom="@+id/button12"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit"
                android:id="@+id/button12" android:layout_column="25"
                android:layout_below="@+id/button11" android:layout_alignParentRight="true" android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>